# Template file for 'nvidia-xrun'
pkgname=nvidia-xrun
version=0.3.master
revision=1
archs=noarch
wrksrc="nvidia-xrun-master"
conf_files="/etc/default/nvidia-xrun"
short_desc="Utility to run X session with discrete nvidia graphics"
maintainer="Stefano Ragni <st3r4g@protonmail.com>"
license="GPL-2.0-only"
homepage="https://github.com/Witko/nvidia-xrun"
distfiles="https://github.com/Witko/nvidia-xrun/archive/master.tar.gz"
checksum=7225246471cfe24f35a2370cb03ce8ae5f5b1d95c695f164ac47b3c4f7402d53

do_install() {
	vinstall config/nvidia-xrun 644 etc/default
	vinstall nvidia-xorg.conf 644 etc/X11
	vinstall nvidia-xinitrc 755 etc/X11/xinit
	vbin nvidia-xrun
	vsv nvidia-xrun-pm
}
