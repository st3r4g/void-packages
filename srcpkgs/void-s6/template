# Template file for 'void-s6'
pkgname=void-s6
version=0
revision=1
wrksrc=void-s6
conf_files="/etc/s6-rc/custom/enabled/contents"
hostmakedepends="git"
depends="s6-portable-utils s6-rc"
short_desc="Source tree for s6-rc"
maintainer="Stefano Ragni <st3r4g@protonmail.com>"
license="Unlicense"
homepage="https://github.com/st3r4g/void-s6"

do_fetch() {
	git clone https://github.com/st3r4g/void-s6
}

do_install() {
	vmkdir etc/s6-rc
	vcopy custom etc/s6-rc/custom
	vcopy void etc/s6-rc/void
	vbin vs6-recompile
}
