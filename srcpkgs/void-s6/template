homepage="https://github.com/st3r4g/void-s6"

do_fetch() {
	git clone https://github.com/st3r4g/void-s6
}

do_install() {
	vmkdir etc/s6-rc
	vcopy source etc/s6-rc/source
	vbin vs6-recompile
}
